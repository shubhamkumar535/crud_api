<body>
 <div class="middle-container background">
   <div class="container-common">
     <div class="row align-items-center justify-content-center min-ht-window">
       <div class="col-md-12">
         <div class="middle-block max-WT-500 margin-auto pLR0">
           <div class="logo-inner">
             <a href="index.html">
               <img src="/assets/logo-inner.png" alt="Logo">
             </a>
           </div>
           <div class="form-block min-ht-400 pb0">
                 <div class="form-header">
                   <h2>Login</h2>
                   <p>Lorem Ipsum is simply dummy text of the printing & typesetting industry.</p>
                 </div>

                 <%= form_for(resource, as: resource_name, html: { class: "main-form p10 mt20"}, url: session_path(resource_name)) do |f| %>

                       <div class="form-group row">
                         <div class="col-md-12 field">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Enter Email', class: 'form-control' %>
                         </div>
                       </div>

                       <div class="form-group row">
                         <div class="col-md-12 field">
                           <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter Password', class: 'form-control' %>
                         </div>
                       </div>

                       <div class="form-group row">
                             <div class="col-md-12 field">

                                   <% if devise_mapping.rememberable? -%>
                                     <label class="checkbox-design remember">
                                     <%= f.check_box :remember_me %>
                                     <span></span>
                                     Remember Me
                                   </label>
                                   <% end -%>

                                  <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'forgot-pass' %>
                             </div>
                       </div>

                       <div class="form-group row">
                          <div class="col-sm-12 text-center">
                            <div class="google-captcha"> 
                              <%= recaptcha_tags  %>
                              <!-- <img src="/assets/google-captcha.png" alt="google captcha"> -->
                            </div>
                          </div>
                       </div>
                       
                       <div class="form-group row mb0">
                         <div class="col-md-12">
                           <%= f.submit "Log in" , class: "btn btn-block btn-login" %>
                           <div class="register">
                             <p>or
                             <%= link_to "Sign Up", new_registration_path(resource_name) , class: "link-register" %></p>
                           </div>
                         </div>
                     </div>
             <% end %>
           </div>
         </div>
       </div>
     </div>
   </div>
 </div>

  <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>

<script>

jQuery.validator.addMethod("noSpace", function(value, element) { 
 return value.indexOf(" ") < 0 && value != ""; 
}, "No space please and don't leave it empty");

$(document).ready(function(){
$("#new_user").validate({
  
  errorPlacement: function (error, element) {
   error.insertBefore(element);
   },
  rules: {
    
    "user[email]":{
      noSpace: true,
      required: true,
      maxlength: 30,
      email: true
    },
    "user[password]":{
      required: true,
      minlength: 6,
      maxlength: 8
    }
    
  }, 
  
  messages: {

    "user[email]":{
      required: "This field is required",
      maxlength: "Email should not be more than 30 characters"

    },
    
    "user[password]":{
      required: "This field is required",
      minlength: "Password should not be more than 6 characters",
      maxlength: "Password should not be more than 20 characters"
     
    }
  }
});
});

</script>
  