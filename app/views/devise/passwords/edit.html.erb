 <div class="middle-container background">
   <div class="container-common">
     <div class="row align-items-center justify-content-center min-ht-window">
       <div class="col-md-12">
         <div class="middle-block max-WT-500 margin-auto pLR0">
           <div class="logo-inner">

             <%= link_to(image_tag("/assets/logo-inner.png") , root_path) %>
           </div>
           <div class="form-block min-ht-400 pb0">
             <div class="form-header">
               <h2>Reset Password</h2>
               <p>Lorem Ipsum is simply dummy text of the printing & typesetting industry.</p>
             </div>
           <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "main-form p10 mt20" }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>
               <div class="form-group row">
                 <div class="col-md-12">
         <% if @minimum_password_length %>
               <em>(<%= @minimum_password_length %> characters minimum)</em><br />
           <% end %>
             <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "New Password", autocomplete: "off" %>
                 </div>
               </div>
               <div class="form-group row">
                 <div class="col-md-12">
                  <%= f.password_field :password_confirmation,class: "form-control", placeholder: "Confirm Password", autocomplete: "off" %>
                 </div>
               </div>
               <div class="form-group row mb0">
                 <div class="col-md-12">

                     <div class="actions">
             <%= f.submit "Change my password" , class: "btn btn-block btn-login" %>
           </div>
                   <div class="register">
                     <p>
                       <%= link_to "Back", new_registration_path(resource_name) , class: "link-register" %></p>
                   </div>
                 </div>
               </div>
               <% end %>
           </div>
         </div>
       </div>
     </div>
   </div>
 </div>