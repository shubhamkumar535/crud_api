<div class="middle-container background">
<div class="container-common">
<div class="row align-items-center justify-content-center min-ht-window">
<div class="col-md-12">
<div class="middle-block max-WT-500 margin-auto pLR0">
<div class="logo-inner">
<a href="index.html">
<img src="/assets/logo-inner.png" alt="Logo">
</a>
</div>
<div class="form-block pb0">
<div class="form-header">
<h2>Forgot Password</h2>
<p>Lorem Ipsum is simply dummy text of the printing & typesetting industry.</p>
</div>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "main-form p10 mt20"  }) do |f| %>
 <%= devise_error_messages! %>
<div class="form-group row">
<div class="col-md-12">
<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address", autocomplete: "email" %>

</div>
</div>
               <div class="form-group row mb0">
                 <div class="col-md-12">

                  <div class="actions">
   <%= f.submit "Submit" , class: 'btn btn-block btn-login'%>
 </div>

                 
                   <div class="register">
                     <p>
                      <%= link_to "Back", new_session_path(resource_name) , class: "link-register back"%>
                      </p>
                   </div>
                 </div>
               </div>
               <% end %>

</div>
</div>
</div>
</div>
</div>
